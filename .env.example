# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/pickem_bot

# Admin Configuration
# Comma-separated list of Discord user IDs who can run admin commands
ADMIN_IDS=123456789012345678,987654321098765432

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Optional: Error Tracking
# Sentry DSN for error tracking and monitoring
SENTRY_DSN=

# Optional: Additional Configuration
# Channel ID for automated notifications (match reminders, results)
NOTIFICATION_CHANNEL_ID=

# Timezone for match scheduling (default: UTC)
TIMEZONE=UTC

# Optional: Game Integration Settings
# Valorant API settings (for future integration)
VALORANT_API_KEY=
VALORANT_REGION=na